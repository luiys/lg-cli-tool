{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2016",
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "resolveJsonModule": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    }
}